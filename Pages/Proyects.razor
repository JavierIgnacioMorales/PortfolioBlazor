@inject IJSRuntime JS

<div class="proyects">
    <div class="textcontpro">
        <div class="textproyects" @onclick="ToggleProyects">
            <h1>Algunos proyectos</h1>
        </div>
    </div>
    <div class="proyectos">Hola acá van los proyectos</div>
    <div class="imgproyects"></div>
</div>


@code {
    private bool isProyectsVisible = false;
    private ElementReference proyectsRef;

    private async Task ToggleProyects()
    {
        isProyectsVisible = !isProyectsVisible;
        await JS.InvokeVoidAsync("toggleProyects", isProyectsVisible);
    }
}

